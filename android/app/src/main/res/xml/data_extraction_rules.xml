<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive shared preferences -->
        <exclude domain="sharedpref" path="flutter.plugins.shared_preferences.xml"/>

        <!-- Exclude transaction data for privacy -->
        <exclude domain="database" />
        <exclude domain="file" path="transactions/"/>
    </cloud-backup>

    <device-transfer>
        <!-- Exclude sensitive shared preferences -->
        <exclude domain="sharedpref" path="flutter.plugins.shared_preferences.xml"/>

        <!-- Exclude transaction data for privacy -->
        <exclude domain="database" />
        <exclude domain="file" path="transactions/"/>
    </device-transfer>
</data-extraction-rules>
